{
  "manifest_version": 3,
  "name": "Image ADA Contrast Analyzer",
  "version": "1.4",
  "description": "Select an image, analyze contrast around text, and download results.",
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}