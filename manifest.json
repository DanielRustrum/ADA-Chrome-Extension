{
  "manifest_version": 3,
  "name": "Image ADA Contrast Analyzer",
  "version": "1.3",
  "description": "Select an image, analyze contrast around text, and download results.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "tesseract.min.js",
        "tesseract-core.wasm",
        "tesseract.worker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}